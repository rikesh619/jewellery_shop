<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="115dp"
    android:layout_height="190dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15dp"
    android:layout_marginStart="15dp"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="105dp"
        android:layout_height="130dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/items_categories_bg"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/pngwing" />

    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:id="@+id/special_edition_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="Mother of Pearls Necklace"
        android:fontFamily="@font/source_serif_pro_regular"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="12sp"
        android:layout_marginTop="5dp"/>


    <TextView
        android:id="@+id/special_edition_item_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$18,500"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:fontFamily="@font/source_serif_pro_light"
        android:layout_marginTop="5dp"/>

</LinearLayout>