<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/items_categories_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="550dp"
            android:layout_height="550dp"
            android:layout_marginTop="-200dp"
            app:cardCornerRadius="275dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="25dp"
                android:layout_marginTop="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/jewellery_bg" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/source_serif_pro_semibold"
                        android:gravity="start"
                        android:letterSpacing="0.05"
                        android:maxLines="1"
                        android:text="JEWELLERY"
                        android:textColor="@color/off_white"
                        android:textSize="25sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="25dp"
                        android:fontFamily="@font/source_serif_pro_semibold"
                        android:text="Hello !"
                        android:textAllCaps="false"
                        android:textColor="@color/items_categories_bg"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/source_serif_pro_semibold"
                        android:text="Welcome to planet of Jewellery \n shopping app. Feel it like home ...."
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="125dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/source_serif_pro_regular"
                            android:gravity="center"
                            android:text="@string/skip_to_browsing"
                            android:textColor="@color/black"
                            android:textSize="25sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:text="Open your account"
                            android:fontFamily="@font/source_serif_pro_light"
                            android:gravity="center"
                            android:layout_marginTop="45dp"
                            android:textColor="@color/white"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/log_in_email_id_layout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="250dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="25dp"
                            app:hintEnabled="false"
                            android:gravity="center"
                            android:layout_gravity="center"
                            app:hintAnimationEnabled="false"
                            app:expandedHintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/email_text_input"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/login_signup_border"
                                android:fontFamily="@font/source_serif_pro_regular"
                                android:hint="Your Email"
                                android:textColorHint="@color/white"
                                android:paddingStart="35dp"
                                android:inputType="textEmailAddress"
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/log_in_password_layout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="250dp"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginTop="25dp"
                            android:fontFamily="@font/source_serif_pro"
                            app:counterMaxLength="20"
                            app:passwordToggleEnabled="true"
                            app:passwordToggleTint="@color/white"
                            app:hintEnabled="false"
                            app:hintAnimationEnabled="false"
                            app:expandedHintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/password_text_input"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/login_signup_border"
                                android:fontFamily="@font/source_serif_pro_regular"
                                android:hint="Password"
                                android:paddingStart="35dp"
                                android:textColorHint="@color/white"
                                android:inputType="textPassword"
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_log_in"
                            android:layout_width="250dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="50dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:background="@drawable/login_signup_btn"
                            android:fontFamily="@font/source_serif_pro_semibold"
                            android:text="Sign In"
                            android:textColor="@color/items_categories_bg"
                            android:textSize="15sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/dont_have_acc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dont have an account?"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginTop="55dp"
                            android:layout_marginBottom="15dp"
                            android:fontFamily="@font/source_serif_pro_semibold"/>

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>