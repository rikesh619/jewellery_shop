<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="65dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/latest_jewellery_ic"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/pngwing"/>

    <TextView
        android:id="@+id/latest_jewellery_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The Jaqueline"
        android:maxLines="2"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:fontFamily="@font/source_serif_pro_semibold"
        android:textColor="@color/black"
        android:gravity="center"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/latest_jewellery_item_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="$ 3,500"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:fontFamily="@font/source_serif_pro_light"/>
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        android:backgroundTint="#C59975">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add To Cart"
            android:textSize="8sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/source_serif_pro_regular"/>

    </androidx.cardview.widget.CardView>



</LinearLayout>